<Window x:Class="Wpf_Learning_First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Learning_First"
        mc:Ignorable="d"
        Title="Hello Wpf" Height="360.249" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Full Name" 
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Margin="5"></TextBlock>
        <TextBox Grid.Column="1" Name="FullName"
               Width="250" Height="30" 
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" Margin="5"></TextBox>
        <TextBlock Grid.Row="1" Text="Gender" 
                 HorizontalAlignment="Right" 
                 VerticalAlignment="Bottom" 
                 Margin="5">
        </TextBlock>
        <StackPanel Grid.Row="1" 
                  Grid.Column="1" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <RadioButton GroupName="Gender" Name="Male" Content="Male" Margin="5" IsChecked="True"></RadioButton>
            <RadioButton GroupName="Gender" Name="Female" Content="Female" Margin="5" ></RadioButton>
        </StackPanel>
        <TextBlock Grid.Row="2" Text="Do You Own" HorizontalAlignment="Right"
                 VerticalAlignment="Bottom" Margin="5">
        </TextBlock>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <CheckBox Content="Desktop" Name="Desktop" Margin="5"></CheckBox>
            <CheckBox Content="Laptop" Name="Laptop" Margin="5"></CheckBox>
            <CheckBox Content="Tablet" Name="Tablet" Margin="5"></CheckBox>
        </StackPanel>
        <TextBlock Grid.Row="3"  Text="Your Job" HorizontalAlignment="Right"
                 VerticalAlignment="Bottom" Margin="5">
        </TextBlock>
        <ComboBox Grid.Row="3" Name="Job" Grid.Column="1" HorizontalAlignment="Left"
                VerticalAlignment="Bottom" Margin="5">
            <ComboBoxItem Content="Programmer"></ComboBoxItem>
            <ComboBoxItem Content="Manager"></ComboBoxItem>
            <ComboBoxItem Content="CTO"></ComboBoxItem>
            <ComboBoxItem Content="CEO"></ComboBoxItem>
            <ComboBoxItem Content="HR"></ComboBoxItem>
        </ComboBox>
        <TextBlock Grid.Row="4" Text="Promised Delivery Date" HorizontalAlignment="Right"
                 VerticalAlignment="Bottom" Margin="5"></TextBlock>
        <Calendar Name="Date" Grid.Row="4" Grid.Column="1" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Calendar>
        <Button Content="Save"  Grid.Row="5" Margin="0,0,4.667,5.333" Name="Save"  HorizontalAlignment="Right" Click="Save_Click" />

    </Grid>


</Window>
