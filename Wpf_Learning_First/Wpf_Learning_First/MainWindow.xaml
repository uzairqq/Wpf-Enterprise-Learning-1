<Window x:Class="Wpf_Learning_First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Learning_First"
        mc:Ignorable="d"
        Title="Hello Wpf" Height="360.249" Width="525">
    <Grid>
        <StackPanel
            Orientation="Horizontal">
            <Slider Name="MySlider" Minimum="0" Maximum="100" Width="300" />
            <TextBlock Margin="5" Text="{Binding Value,ElementName=MySlider}"></TextBlock>
                    </StackPanel>
    </Grid>
       


</Window>
