<Window x:Class="Wpf_Learning_First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Learning_First"
        mc:Ignorable="d"
        Title="Hello Wpf" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="Red" Grid.Row="0"></Rectangle>
        <Rectangle Fill="Green" Grid.Row="1"></Rectangle>
        <Rectangle Fill="Pink" Grid.Row="2"></Rectangle>
        <Rectangle Fill="Black" Grid.Row="3"></Rectangle>
        <Rectangle Fill="Coral" Grid.Row="4"></Rectangle>
        <Rectangle Fill="DarkMagenta" Grid.Row="5">
        </Rectangle>

    </Grid>
</Window>
